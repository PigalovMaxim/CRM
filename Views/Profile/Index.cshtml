@{
    ViewData["Title"] = "Профиль";
}

<div class="w-full h-full bg-bg flex flex-col justify-start items-center">
    <div class="w-full flex flex-col">
        <div class="flex flex-row justify-start items-center">
            <span class="text-xl text-white">Управление рабочим временем</span>
        </div>
        <table class="w-full px-4 mt-4">
            <col width="40" />
            <col width="150" />
            <col width="150" />
            <thead class="h-14 bg-block text-white">
            <td class="px-2">#</td>
            <td class="px-2">День</td>
            <td class="px-2">Время</td>
            <td class="px-2">Описание дня</td>
            </thead>
            <tbody id="js-profile-work-days">
                <tr class="px-4 h-14 bg-block-highlighted/60 text-white">
                    <td class="px-2">N</td>
                    <td class="px-2">
                        <input type="date" id="js-profile-workday-day" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                    </td>
                    <td class="px-2">
                        <input type="number" id="js-profile-workday-count" max="8" min="0" value="0" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                    </td>
                    <td class="px-2">
                        <div class="flex flex-row justify-center items-center h-full">
                            <input id="js-profile-workday-description" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                            <button id="js-profile-workday-button" class="ml-4 bg-c-green px-6 rounded-lg hover:bg-c-green-light">Добавить</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script defer src="~/dist/profile.min.js"></script>