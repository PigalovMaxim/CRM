@{
    ViewData["Title"] = "Админ панель";
}

<div class="w-full flex flex-col justify-start items-start pb-gap">
    <div class="w-full flex flex-col mb-8">
        <span class="text-xl text-white">Добавить сотрудника</span>
        <div class="flex flex-row justify-start items-center mt-4">
            <input id="js-admin-user-login" placeholder="Логин" class="w-64 h-7 text-white bg-transparent border border-white outline-none rounded-md px-2 mr-4" />
            <input id="js-admin-user-password" placeholder="Пароль" class="w-64 h-7 text-white bg-transparent border border-white outline-none rounded-md px-2 mr-4" />
            <button class="ml-4 h-7 text-white bg-c-green px-6 rounded-lg hover:bg-c-green-light" id="js-admin-create-user">Добавить</button>
        </div>
    </div>
    <div class="w-full flex flex-col">
        <div class="flex flex-row justify-start items-center">
            <span class="text-xl text-white">Управление рабочим временем сотрудника</span>
            <select class="h-10 ml-4 bg-block-highlighted/60 border border-block outline-none rounded-md px-2 text-white" id="js-admin-users"></select>
        </div>
        <table class="w-full px-4 mt-4">
            <col width="40" />
            <col width="150" />
            <col width="150" />
            <thead class="h-14 bg-block text-white">
                <td class="px-2">#</td>
                <td class="px-2">День</td>
                <td class="px-2">Время</td>
                <td class="px-2">Описание дня</td>
            </thead>
            <tbody id="js-admin-work-days">

                <tr class="px-4 h-14 bg-block-highlighted/60 text-white js-not-delete">
                    <td class="px-2">N</td>
                    <td class="px-2">
                        <input type="date" id="js-admin-workday-day" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                    </td>
                    <td class="px-2">
                        <input type="number" id="js-admin-workday-count" max="8" min="0" value="0" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                    </td>
                    <td class="px-2">
                        <div class="flex flex-row justify-center items-center h-full">
                            <input id="js-admin-workday-description" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                            <button id="js-admin-workday-button" class="ml-4 bg-c-green px-6 rounded-lg hover:bg-c-green-light">Добавить</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="~/libs/md5.js" defer asp-append-version="true"></script>
<script defer src="~/dist/admin.min.js"></script>