@{
    ViewData["Title"] = "Админ панель";
}

<div class="w-full flex flex-col justify-start items-start pb-gap">
    <div class="w-full flex flex-col mb-8">
        <span class="text-xl text-white">Добавить сотрудника</span>
        <div class="flex flex-row justify-start items-center mt-4">
            <input placeholder="Логин" class="w-64 h-7 text-white bg-transparent border border-white outline-none rounded-md px-2 mr-4" />
            <input placeholder="Пароль" class="w-64 h-7 text-white bg-transparent border border-white outline-none rounded-md px-2 mr-4" />
            <button class="ml-4 h-7 text-white bg-c-green px-6 rounded-lg hover:bg-c-green-light">Добавить</button>
        </div>
    </div>
    <div class="w-full flex flex-col">
        <div class="flex flex-row justify-start items-center">
            <span class="text-xl text-white">Управление рабочим временем сотрудника</span>
            <select class="h-10 ml-4 bg-block-highlighted/60 border border-block outline-none rounded-md px-2 text-white">
                <option class="bg-block">Сотрудник 1</option>
                <option class="bg-block">Сотрудник 2</option>
                <option class="bg-block">Сотрудник 3</option>
                <option class="bg-block">Сотрудник 4</option>
            </select>
        </div>
        <table class="w-full px-4 mt-4">
            <col width="40" />
            <col width="150" />
            <col width="150" />
            <thead class="h-14 bg-block text-white">
                <td class="px-2">#</td>
                <td class="px-2">День</td>
                <td class="px-2">Время</td>
                <td class="px-2">Описание дня</td>
            </thead>
            <tbody>
                @for(int i = 0; i < 10; i++)
                {
                    bool isLight = i % 2 == 1;
                    <tr class="px-4 h-14 @(isLight ? "bg-block" : "") text-white">
                        <td class="px-2">@(i + 1)</td>
                        <td class="px-2">День</td>
                        <td class="px-2">8 часов</td>
                        <td class="px-2">Описание</td>
                    </tr>
                }
                <tr class="px-4 h-14 bg-block-highlighted/60 text-white">
                    <td class="px-2">N</td>
                    <td class="px-2">
                        <input type="date" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                    </td>
                    <td class="px-2">
                        <input type ="number" max="8" min="0" value="0" class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                    </td>
                    <td class="px-2">
                        <div class="flex flex-row justify-center items-center h-full">
                            <input class="w-full h-full bg-transparent border border-block outline-none rounded-md px-2" />
                            <button class="ml-4 bg-c-green px-6 rounded-lg hover:bg-c-green-light">Добавить</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>